<%- include('header') -%>

<div class="container">
    <div class="py-5 text-center">
        
        <h2>Upload a Place</h2>
    
    </div>

    
        <div class="col-md-12 order-md-1">
            <form class="needs-validation">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label for="placeName">Place Name</label>
                        <input type="text" class="form-control" id="placeName" placeholder="" value="" required>
                        <div class="invalid-feedback">
                            Valid place name is required.
                        </div>
                    </div>
            
                </div>


                <div class="mb-3">
                    <label for="uploadDate">Upload Date</label>
                    <div class="input-group">
                        <input type="date" class="form-control" id="uploadDate" required>
                        <div class="invalid-feedback" style="width: 100%;">
                            Upload date is required.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description">Describe</label>
                    <textarea class="form-control" id="description" placeholder="" value="" rows="14" required> </textarea>
                    <div class="invalid-feedback">
                        Description is required.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="picture">Upload Pictures:</label>
                    <input type="file" class="img-upload-btn" id="picture">
                </div>

                <hr class="mb-4">

                <button class="btn btn-primary btn-lg btn-block" type="submit">Post</button>
            </form>
        </div>
    </div>

<%- include('footer') -%>